<%- include("partials/header") %> 
<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Create a New Campground</h1>
        <div style="width: 40%; margin: 30px auto;">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" id="" placeholder="Name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" id="" placeholder="Image Url">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="description" id="" placeholder="Description">
                </div>
                <div class="form-group">
                    <input class="btn btn-lg btn-primary btn-block" type="submit" placeholder="Submit!">
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>        
        </div>  
    </div>
</div>
<%- include("partials/footer") %> 
