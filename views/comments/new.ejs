<%- include("../partials/header") %>
<div class="container">
  <div class="row">
    <h1 style="text-align: center">
      Add New Comment to <strong><%= campground.name %></strong>
    </h1>
    <div style="width: 40%; margin: 30px auto">
      <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name="comment[text]"
            id=""
            placeholder="Text"
          />
        </div>
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name="comment[author]"
            id=""
            placeholder="Author"
          />
        </div>
        <div class="form-group">
          <input
            class="btn btn-lg btn-primary btn-block"
            type="submit"
            placeholder="Submit!"
          />
        </div>
      </form>
      <a href="/campgrounds">Go Back</a>
    </div>
  </div>
</div>
<%- include("../partials/footer") %>
